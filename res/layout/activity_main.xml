<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jni.MainActivity" >

    <Button
        android:id="@+id/helloworld"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="HelloWorld" />

    <Button
        android:id="@+id/jnicallmethod1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="jniCallMethod1" />

    <Button
        android:id="@+id/jnicallmethod2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="jniCallMethod2" />

    <Button
        android:id="@+id/jnicallstaticmethod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="jniCallStaticMethod" />

    <Button
        android:id="@+id/jnicallstaticmethod_c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="jniCallStaticMethod(C)" />

    <Button
        android:id="@+id/dynamicregistermethod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="DynamicRegisterMethod" />

</LinearLayout>